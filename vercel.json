{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "rewrites": [
    { "source": "/greek-dashboard", "destination": "/greek-dashboard" },
    { "source": "/greek-bot-control", "destination": "/greek-bot-control" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "trailingSlash": false,
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_API_URL": "/api"
  },
  "github": {
    "silent": true,
    "autoAlias": true
  }
}
