{
  "name": "solana-maker-bot-desktop",
  "version": "1.0.0",
  "description": "Desktop application for Solana Maker Bot",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.solanamakerbot.app",
    "productName": "Solana Maker Bot",
    "mac": {
      "category": "public.app-category.finance"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourname/solana-maker-bot-desktop.git"
  },
  "keywords": [
    "solana",
    "trading",
    "bot",
    "maker",
    "jupiter",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@jup-ag/api": "^6.0.12",
    "electron-store": "^8.1.0",
    "crypto": "^1.0.1",
    "axios": "^1.6.5",
    "bs58": "^5.0.0"
  }
}
